<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_persegi">

    <!-- Judul -->
    <TextView
        android:id="@+id/tv_title_persegi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Luas dan Keliling Persegi"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Input Sisi -->
    <EditText
        android:id="@+id/et_sisi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan panjang sisi"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tv_title_persegi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Tombol Hitung Luas -->
    <Button
        android:id="@+id/btn_hitung_luas_persegi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hitung Luas"
        app:layout_constraintTop_toBottomOf="@id/et_sisi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Tombol Hitung Keliling -->
    <Button
        android:id="@+id/btn_hitung_keliling_persegi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hitung Keliling"
        app:layout_constraintTop_toBottomOf="@id/btn_hitung_luas_persegi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:padding="12dp" />

    <!-- Tampilan Hasil -->
    <TextView
        android:id="@+id/tv_hasil_persegi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil: "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_hitung_keliling_persegi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
