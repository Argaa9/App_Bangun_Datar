<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator Trapesium"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/et_alas_besar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alas Besar"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/et_alas_kecil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alas Kecil"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/et_tinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Tinggi"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/et_sisi_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Sisi 1"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/et_sisi_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Sisi 2"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btn_hitung_luas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Luas"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_hitung_keliling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Keliling"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
