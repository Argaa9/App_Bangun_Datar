<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersegiPanjangActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Luas dan Keliling Persegi Panjang"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <!-- Input Panjang -->
    <EditText
        android:id="@+id/et_panjang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan panjang"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Input Lebar -->
    <EditText
        android:id="@+id/et_lebar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan lebar"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/et_panjang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:padding="12dp"/>

    <!-- Button Hitung Luas -->
    <Button
        android:id="@+id/btn_hitung_luas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hitung Luas"
        app:layout_constraintTop_toBottomOf="@id/et_lebar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button Hitung Keliling -->
    <Button
        android:id="@+id/btn_hitung_keliling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hitung Keliling"
        app:layout_constraintTop_toBottomOf="@id/btn_hitung_luas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:padding="12dp"/>

    <!-- TextView for displaying results -->
    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil: "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_hitung_keliling"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
